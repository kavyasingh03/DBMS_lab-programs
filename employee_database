show databases;
create database Employee_Database_1BM23CS146;
use Employee_Database_1BM23CS146;

create table dept(
no varchar(20) primary key, 
dname varchar(20), 
dloc varchar(20)
);

create table employee(
empno int,
ename varchar(20),
mgr_no int,
hiredate varchar(20), 
sal float,
no varchar(20),
primary key(empno,no), 
foreign key(no) references dept(no)
);

create table incentives(
empno int, 
date VARCHAR(20), 
amt float,
primary key(empno,date),
foreign key(empno) references employee(empno)
);

create table project(
pno int primary key, 
ploc VARCHAR(20),
pname varchar(20)
);

create table Assingnedto(
empno int, 
pno int,
job_role text, 
primary key(empno,pno), 
foreign key(empno) references employee(empno), 
foreign key(pno) references project(pno)
);

